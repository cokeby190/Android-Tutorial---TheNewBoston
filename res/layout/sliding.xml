<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/b_sd_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/b_sd_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/b_sd_test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>
    
    <SlidingDrawer
        android:id="@+id/slidingDraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle" >

        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide Up!" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="483dp" >
            
             <Button
		        android:id="@+id/b_search_test"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Search"
		        android:layout_marginLeft="25dp" />
		
		    <Button
		        android:id="@+id/b_dir_test"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Directory" />
		
		    <Button
		        android:id="@+id/b_crowd_test"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Crowd" />
		
		    <Button
		        android:id="@+id/b_nearby_test"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Nearby" />
    
        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>